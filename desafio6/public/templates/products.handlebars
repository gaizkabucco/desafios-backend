{{#if products}}
	<table class="table table-dark">
		<tr>
			<th>Nombre</th>
			<th>Precio</th>
			<th>Foto</th>
		</tr>
		{{#each products}}
			<tr>
				<td class="align-middle">{{this.name}}</td>
				<td class="align-middle">{{this.price}}</td>
				<td class="align-middle">
					<picture>
						<img src={{this.thumbnail}} />
					</picture>
				</td>
			</tr>
		{{/each}}
	</table>
{{/if}}